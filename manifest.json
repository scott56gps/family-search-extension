{
    "manifest_version": 2,

    "name": "Family Search Example",
    "description": "This extension scrapes a FamilySearch Person page for their name and pid",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "content_scripts": [
        {
            "matches": ["https://familysearch.org/tree/person/*"],
            "js": ["popup.js"]
        }
    ],
    "background": {
        "page": "background_page.html"
    },
    "permissions": [
    "tabs",
    "https://familysearch.org/tree/person/*"
  ],
    "web_accessible_resources": ["redirect.html", "redirect.js"]
}
